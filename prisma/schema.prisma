generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = API_URL
}

model City {
  id   Int    @id @default(autoincrement())
  name String @unique
  unis Uni[]
}

model Uni {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  majors Major[]
  City   City?   @relation(fields: [cityId], references: [id])
  cityId Int?
}

model Major {
  id    Int    @id @default(autoincrement())
  name  String
  Uni   Uni?   @relation(fields: [uniId], references: [id])
  uniId Int?
}

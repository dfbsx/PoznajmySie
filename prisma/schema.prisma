// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  unis      Uni[]
}

model Uni {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  majors    Major[]
}

model Major {
  id        Int     @id @default(autoincrement())
  name      String
}